#!/usr/bin/env groovy
def gv

pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    parameters {
        booleanParam(name: 'executeTests', defaultValue: true, description: "should execute tests")
    }
    stages {
        stage('init') {
            steps {
                script {
                    gv = load "./jenkins-params-build/script.groovy"
                }
                
            }
        }
        stage('test') {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                script {
                    gv.testImage()
                }
            }
        }
        stage('deploy') {
            steps {
                scripts {
                    input (message: "Select environment to deploy to..", ok: 'Done')
                    parameters(choice(name: "ENV", choices: ["dev", "staging", "prod"], description: ""))
                    gv.deployImage()
                }
            }
        }
    }
}
