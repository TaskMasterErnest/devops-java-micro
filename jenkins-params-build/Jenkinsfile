#!/usr/bin/env groovy
def gv

pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    parameters {
        booleanParam(name: 'executeTests', defaultValue: true, description: "should execute tests")
    }
    stages {
        stage('init') {
            steps {
                script {
                    gv = load "./jenkins-params-build/script.groovy"
                }
                
            }
        }
        stage('test') {
            steps {
                script {
                    env.PICK = input message: "Select whether to test or not", ok: "Done",
                    parameters: [choice(name: "PICK", choices: ['Yes', 'No'], description: '')]
                    
                    if (params.PICK == 'No') {
                        echo "Did not choose Yes, so what do we do now?"
                    } else {
                        gv.testImage()
                    }
                    }
                }
            }
        stage('deploy') {
            steps {
                script {
                    env.ENV = input message: "Select the environment to deploy to", ok: "Done", parameters: [choice(name: 'ONE', choices: ['dev', 'staging', 'prod'], description: '')]                    
                    echo "Deploying to ${params.ENV}"
                    gv.deployImage()
                }
            }
        }
    }
}