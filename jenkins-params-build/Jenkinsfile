#!/usr/bin/env groovy
def gv

pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    parameters {
        booleanParam(name: 'executeTests', defaultValue: true, description: "should execute tests")
    }
    stages {
        stage('init') {
            steps {
                script {
                    gv = load "./jenkins-params-build/script.groovy"
                }
                
            }
        }
        stage('test') {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                script {
                    gv.testImage()
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    input message 'select environment to deploy to:' parameters [choice(name: 'ENV', choices: ['dev', 'staging', 'prod'], description: 'selecting env to deploy to')]
                    
                    echo "Deploying to ${params.ENV}"
                    gv.deployImage()
                }
            }
        }
    }
}
