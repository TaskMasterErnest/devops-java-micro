#!/usr/bin/env groovy
def gv

pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    parameters {
        choice(name: 'VERSION', choices['1.1.1, 2.1.1, 3.1.1'], description: "version choice to deploy")
        choice(name: 'ENV', choices['dev', 'staging', 'prod'], description: "the env to deploy to")
        booleanParam(name: 'executeTests', defaultValue: true, description: "should execute tests")
    }
    stages {
        stage('init') {
            steps {
                script {
                    gv = load "script.groovy"
                }
                
            }
        }
        stage('test') {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                script {
                    gv.testImage()
                }
            }
        }
        stage('deploy') {
            input {
                message "select env to deploy to"
                ok: 'Done'
                when {
                    expression {
                        params.ENV
                    }
                }
            }
            steps {
                echo "deploying the application..."
                echo "deploying to $ENV"
            }
        }
    }
}
